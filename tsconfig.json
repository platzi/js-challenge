{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": { 
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["ES2020","DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "checkJs": false,
    "noImplicitUseStrict": true,
    "allowJs": true,
  }

}